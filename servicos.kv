<ContentNavigationDrawer>:
    ScrollView:

        MDList:

            OneLineAvatarListItem:
                text: 'Tela Principal'
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "principal"
                IconLeftWidget:
                    icon: 'home'

            OneLineAvatarListItem:
                text: "Cadastro Prestadores"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "tela_prest"
                IconLeftWidget:
                    icon: 'database-cog'

            OneLineAvatarListItem:
                text: "Pesquisar notas"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "pesquisar"
                IconLeftWidget:
                    icon: 'database-search'

            OneLineAvatarListItem:
                text: "Consulta Banco"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "banco_dados"
                IconLeftWidget:
                    icon: 'database-eye'

            OneLineAvatarListItem:
                text: "Exportar Banco"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "exportar_dados"
                IconLeftWidget:
                    icon: 'database-arrow-up'

            OneLineAvatarListItem:
                text: "Relatórios"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "gerar_relatorios"
                IconLeftWidget:
                    icon: 'database-export'

<MDTextField>
    size_hint: (.1, .08)
    mode: "rectangle"
    font_size: '18dp'
    line_color_normal: '#fca311'
    line_color_focus: '#fca311'
    #hint_text_color_normal: '#e5e5e5'
    hint_text_color_focus: '#14213d'
    text_color_normal: 0, 0, 0, 1
    text_color_focus: 0, 0, 0, 1
    write_tab: False

<MDRectangleFlatButton>
    size_hint: (.15, .08)
    font_size: '22dp'
    text_color: '#14213d'
    line_color: '#fca311'
    md_bg_color: '#fca311'



Screen:
    name: 'tela1'

    MDTopAppBar:
        id: toolbar
        pos_hint: {"top": 1}
        md_bg_color: '#14213d'
        elevation: 0
        title: "Notas Fiscais de Serviço"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]


    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager

            Principal:
                name: "principal"

            CadastroPrestador:
                name: "tela_prest"

            PesquisarNota:
                name: "pesquisar"

            BancoDados:
                name: "banco_dados"

            ExportarDados:
                name: 'exportar_dados'

            Relatorios:
                name: 'gerar_relatorios'

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer


<Image>
    source: 'drew.jpg'
    allow_stretch: True
    keep_ratio: False

