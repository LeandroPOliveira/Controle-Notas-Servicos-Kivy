                    MDTextField:
                        pos_hint: {'x': .725, 'y': .725}
                        hint_text: "Alíq. CRF"

                    MDTextField:
                        pos_hint: {'x': .85, 'y': .725}
                        hint_text: "CRF"

                    MDTextField:
                        pos_hint: {'x': .725, 'y': .60}
                        hint_text: "Alíq. INSS"

                    MDTextField:
                        pos_hint: {'x': .85, 'y': .60}
                        hint_text: "INSS"

                    MDTextField:
                        pos_hint: {'x': .725, 'y': .475}
                        hint_text: "Alíq. INSS"

                    MDTextField:
                        pos_hint: {'x': .85, 'y': .475}
                        hint_text: "INSS"

                    MDTextField:
                        size_hint: (.15, .09)
                        pos_hint: {'x': .5, 'y': .475}
